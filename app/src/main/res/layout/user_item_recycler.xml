<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="2dp"
    app:cardBackgroundColor="#F7F7F7">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <View
          android:id="@+id/viewColorItem"
          android:layout_width="17dp"
          android:layout_height="110dp"
          android:background="#196B19"/>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:gravity="center"
          android:padding="16dp"
          android:orientation="vertical">
          <TextView
              android:id="@+id/tvNameItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:textSize="18sp"
              android:text="Name"
              android:textColor="#196B19"
              android:fontFamily="sans-serif-medium"/>
          <View
              android:layout_width="0dp"
              android:layout_height="8dp"/>

          <TextView
              android:id="@+id/tvPhoneItem"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="sans-serif"
              android:text="+966509794511"
              android:textColor="#393939"
              android:textFontWeight="450"
              android:textSize="18sp"
              android:textStyle="normal" />
      </LinearLayout>
      <View
          android:layout_width="0.5dp"
          android:layout_height="50dp"
          android:layout_gravity="center"
          android:alpha="0.5"
          android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sur Name"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#393939"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"/>
        <TextView
            android:id="@+id/tvNickItem"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:layout_height="wrap_content"
            android:text="Smaro"
            android:textColor="#757575"/>
        <View
            android:layout_width="0dp"
            android:layout_height="5dp"/>

        <TextView
            android:id="@+id/tvMailItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Contact: Faisal@gmail.com"
            android:textColor="#757575"
            android:textSize="11sp" />
    </LinearLayout>
  </LinearLayout>
      <ImageButton
          android:id="@+id/imgBtnDelete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_delete"
          android:background="@null"
          android:layout_marginRight="8dp"
          android:layout_marginTop="8dp"
          android:layout_gravity="right"/>
        <ImageButton
            android:id="@+id/imgBtnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="@null"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="right|bottom"/>
    </FrameLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>